{
    "name": "wp-reactjs-starter",
    "docker-hub-username": "matzeeable",
    "docker-ci-image-name": "ci-php-composer-node",
    "db-snapshot": [
        "wp_posts",
        "wp_postmeta"
    ],
    "version": "0.1.3",
    "description": "WordPress Plugin Boilerplate using new web technologies.",
    "author": "Matthias GÃ¼nter <support@matthias-web.com>",
    "license": "MIT",
    "private": true,
    "homepage": "https://matthias-web.com",
    "apidoc": {
        "sampleUrl": "/wp-json"
    },
    "main": "index.js",
    "scripts": {
        "//     MAIN    //": "--",
        "start-development": "yarn dcompose up --build -d && grunt copy-npmLibs && concurrently --raw \"yarn dcompose logs -f -t --tail=10\" \"yarn --silent wp-wait && webpack --watch\" \"yarn --silent chokidar 'inc/**/*.php' -i 'inc/others/cachebuster*' -c 'yarn i18n-backend' --silent\"",
        "stop-development": "yarn dcompose stop",
        "rm-development": "yarn dcompose down",
        "purge-development": "yarn dcompose down -v",
        "dcompose": "COMPOSE_PATH_SEPARATOR=: COMPOSE_FILE=./docker/development/docker-compose.yml:./docker/development/docker-compose.local.yml COMPOSE_PROJECT_NAME=${npm_package_name} docker-compose",
        "dcompose-name": "echo $(docker inspect -f '{{.Name}}' $(yarn --silent dcompose --log-level ERROR ps -q ${DCOMPOSE_SERVICE_NAME}) | cut -c2-)",
        "dcompose-name-wordpress": "DCOMPOSE_SERVICE_NAME=wordpress yarn --silent dcompose-name",
        "wp-cli": "yarn --silent dcompose --log-level ERROR exec --user 33:33 wordpress /bin/bash -c",
        "wp-wait": "docker exec $(yarn --silent dcompose-name-wordpress) bash -c 'while [[ \"$(curl --insecure -s -o /dev/null -w ''%{http_code}'' localhost/wp-json/wprjss/v1/plugin)\" != \"200\" ]]; do sleep 2; done'",
        "i18n-backend": "wp i18n make-pot . languages/$(basename \"$(pwd)\").pot --ignore-domain --include=inc/,index.php",
        "i18n-frontend": "wp i18n make-pot public/dev public/languages/$(basename \"$(pwd)\").pot --ignore-domain && rm -rf public/languages/json && wp i18n make-json public/languages public/languages/json --no-purge",
        "db-snapshot": "yarn --silent wp-cli \"wp db export - --tables=$(node -e 'console.log(require(`./package.json`)[`db-snapshot`].join(`,`))')\" >",
        "db-snapshot-import-on-startup": "yarn --silent db-snapshot docker/scripts/startup.sql",
        "db-snapshot-import": "yarn --silent wp-cli \"wp db import /scripts/startup.sql\"",
        "build": "NODE_ENV=production webpack",
        "build-dev": "webpack",
        "webpack-build-done": "grunt cachebuster:public && yarn --silent i18n-frontend",
        "lint": "tslint --project .",
        "release": "yarn version --no-git-tag-version",
        "version": "grunt postversion",
        "serve": "yarn --silent build && yarn --silent build-dev && grunt copy-npmLibs && grunt public-cachebuster && grunt serve",
        "phpdocs": "rm -rf docs/php docs/_php && vendor/bin/phpdoc run -d inc/ -f index.php -t docs/_php --template=vendor/nelson6e65/phpdoc-vuepress/data/templates/vuepress && mkdir -p docs/_php/.vuepress/ && cp build/vuepress-php.js docs/_php/.vuepress/config.js && vuepress build docs/_php && rm -rf docs/_php",
        "jsdocs": "rm -rf docs/js && typedoc public/src",
        "apidocs": "rm -rf docs/api && apidoc -i inc -o docs/api",
        "hookdocs": "rm -rf docs/hooks && jsdoc inc -c build/hookdoc.json",
        "docs": "yarn --silent phpdocs && yarn --silent jsdocs && yarn --silent apidocs && yarn --silent hookdocs",
        "prettier-write": "prettier --write 'inc/**/*.php' '*.php' && prettier --write 'public/src/**/*.tsx'",
        "test": "yarn --silent test-e2e",
        "test-e2e": "cypress run",
        "//     CI    //": "--",
        "docker-ci-image-build": "./docker/scripts/build-ci-image.sh",
        "docker-ci-image-push": "./docker/scripts/push-ci-image.sh",
        "dcompose-ci": "COMPOSE_PATH_SEPARATOR=: COMPOSE_FILE=./docker/development/docker-compose.yml:./docker/development/docker-compose.ci.yml COMPOSE_PROJECT_NAME=${npm_package_name}-ci-${CI_COMMIT_REF_SLUG} docker-compose --log-level ERROR",
        "dcompose-ci-name": "echo $(docker inspect -f '{{.Name}}' $(yarn --silent dcompose-ci ps -q ${DCOMPOSE_SERVICE_NAME}) | cut -c2-)",
        "dcompose-ci-name-wordpress": "DCOMPOSE_SERVICE_NAME=wordpress yarn --silent dcompose-ci-name",
        "dcompose-traefik": "COMPOSE_PATH_SEPARATOR=: COMPOSE_FILE=./docker/development/docker-compose.yml:./docker/development/docker-compose.traefik.yml COMPOSE_PROJECT_NAME=${npm_package_name}-traefik-${CI_COMMIT_REF_SLUG} docker-compose --log-level ERROR",
        "dcompose-traefik-name": "echo $(docker inspect -f '{{.Name}}' $(yarn --silent dcompose-traefik ps -q ${DCOMPOSE_SERVICE_NAME}) | cut -c2-)",
        "dcompose-traefik-name-wordpress": "DCOMPOSE_SERVICE_NAME=wordpress yarn --silent dcompose-traefik-name"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "@wordpress/i18n": "^3.5.0",
        "i18n-calypso": "^3.0.0",
        "jquery": "^3.4.1",
        "lil-uri": "^0.2.2",
        "mobx": "^4.9.4",
        "mobx-react": "^5.4.3",
        "mobx-state-tree": "^3.14.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "setimmediate": "^1.0.5"
    },
    "devDependencies": {
        "@babel/core": "^7.4.4",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/plugin-proposal-function-sent": "^7.2.0",
        "@babel/plugin-proposal-numeric-separator": "^7.2.0",
        "@babel/plugin-proposal-optional-chaining": "^7.2.0",
        "@babel/plugin-proposal-pipeline-operator": "^7.3.2",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/plugin-syntax-import-meta": "^7.2.0",
        "@babel/plugin-transform-async-to-generator": "^7.4.4",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/preset-env": "^7.4.4",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@babel/runtime": "^7.4.4",
        "@commitlint/cli": "^7.6.1",
        "@commitlint/config-conventional": "^7.6.0",
        "@prettier/plugin-php": "^0.10.2",
        "@types/classnames": "^2.2.7",
        "@types/jquery": "^3.3.29",
        "@types/lil-uri": "^0.2.0",
        "@types/react": "^16.8.17",
        "@types/react-dom": "^16.8.4",
        "apidoc": "^0.17.7",
        "autoprefixer": "^9.5.1",
        "babel-loader": "^8.0.5",
        "chokidar-cli": "^1.2.2",
        "classnames": "^2.2.6",
        "concurrently": "^4.1.0",
        "css-loader": "^1.0.1",
        "cypress": "^3.3.1",
        "grunt": "^1.0.4",
        "grunt-cachebuster": "^0.1.7",
        "grunt-contrib-clean": "^2.0.0",
        "grunt-contrib-compress": "^1.5.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-node-modules-cachebuster": "^0.1.0",
        "husky": "^2.2.0",
        "jsdoc": "^3.6.1",
        "lodash": "^4.17.11",
        "mini-css-extract-plugin": "^0.4.5",
        "node-sass": "^4.12.0",
        "postcss-clean": "^1.1.0",
        "postcss-loader": "^3.0.0",
        "prettier": "^1.17.0",
        "pretty-quick": "^1.10.0",
        "sass-loader": "^7.1.0",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^4.0.0",
        "typedoc": "^0.14.2",
        "typescript": "^3.4.5",
        "vuepress": "^0.14.11",
        "wait-on": "^3.2.0",
        "webpack": "^4.31.0",
        "webpack-cli": "^3.3.2",
        "webpackbar": "^3.2.0",
        "wp-hookdoc": "^0.2.0"
    }
}
