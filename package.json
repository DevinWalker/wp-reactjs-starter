{
    "name": "wp-reactjs-boilerplate",
    "version": "0.1.0",
    "description": "WordPress Plugin Boilerplate using new web technologies.",
    "author": "Matthias GÃ¼nter <support@matthias-web.com>",
    "license": "MIT",
    "private": true,
    "homepage": "https://matthias-web.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/matzeeable/wp-reactjs-starter"
    },
    "apidoc": {
        "sampleUrl": "/wp-json"
    },
    "main": "index.js",
    "scripts": {
        "start-development": "docker-compose -f docker/development/docker-compose.yml up --build -d && grunt copy-npmLibs && concurrently --raw \"cd docker/development && docker-compose logs -f -t --tail=10\" \"webpack --watch\"",
        "stop-development": "docker-compose -f docker/development/docker-compose.yml stop",
        "rm-development": "docker-compose -f docker/development/docker-compose.yml down",
        "purge-development": "docker-compose -f docker/development/docker-compose.yml down -v",
        "build": "NODE_ENV=production webpack",
        "build-dev": "webpack",
        "webpack-build-done": "grunt cachebuster:public",
        "lint": "tslint --project .",
        "serve": "npm run build && npm run build-dev && grunt copy-npmLibs && grunt public-cachebuster && grunt serve",
        "phpdocs": "rm -rf docs/php docs/_php && vendor/bin/phpdoc run -d inc/ -f index.php -t docs/_php --template=vendor/nelson6e65/phpdoc-vuepress/data/templates/vuepress && mkdir -p docs/_php/.vuepress/ && cp build/vuepress-php.js docs/_php/.vuepress/config.js && vuepress build docs/_php && rm -rf docs/_php",
        "jsdocs": "rm -rf docs/js && ./node_modules/.bin/jsdoc public/src -c build/jsdoc.json",
        "apidocs": "rm -rf docs/api && ./node_modules/.bin/apidoc -i inc -o docs/api",
        "hookdocs": "rm -rf docs/hooks && ./node_modules/.bin/jsdoc inc -c build/hookdoc.json",
        "docs": "npm run phpdocs && npm run jsdocs && npm run apidocs && npm run hookdocs",
        "prettier-write": "prettier --write 'inc/**/*.php' '*.php' && prettier --write 'public/src/**/*.tsx'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "i18n-calypso": "^3.0.0",
        "jquery": "^3.4.1",
        "lil-uri": "^0.2.2",
        "mobx": "^4.9.4",
        "mobx-react": "^5.4.3",
        "mobx-state-tree": "^3.14.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "setimmediate": "^1.0.5"
    },
    "devDependencies": {
        "@babel/core": "^7.4.4",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/plugin-proposal-do-expressions": "^7.2.0",
        "@babel/plugin-proposal-export-default-from": "^7.2.0",
        "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
        "@babel/plugin-proposal-function-sent": "^7.2.0",
        "@babel/plugin-proposal-json-strings": "^7.2.0",
        "@babel/plugin-proposal-logical-assignment-operators": "^7.2.0",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
        "@babel/plugin-proposal-numeric-separator": "^7.2.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@babel/plugin-proposal-optional-chaining": "^7.2.0",
        "@babel/plugin-proposal-pipeline-operator": "^7.3.2",
        "@babel/plugin-proposal-throw-expressions": "^7.2.0",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/plugin-syntax-import-meta": "^7.2.0",
        "@babel/plugin-transform-async-to-generator": "^7.4.4",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/preset-env": "^7.4.4",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@babel/runtime": "^7.4.4",
        "@commitlint/cli": "^7.6.1",
        "@commitlint/config-conventional": "^7.6.0",
        "@prettier/plugin-php": "^0.10.2",
        "@types/classnames": "^2.2.7",
        "@types/jquery": "^3.3.29",
        "@types/lil-uri": "^0.2.0",
        "@types/react": "^16.8.17",
        "@types/react-dom": "^16.8.4",
        "apidoc": "^0.17.7",
        "autoprefixer": "^9.5.1",
        "babel-loader": "^8.0.5",
        "classnames": "^2.2.6",
        "concurrently": "^4.1.0",
        "css-loader": "^1.0.1",
        "grunt": "^1.0.4",
        "grunt-cachebuster": "^0.1.7",
        "grunt-contrib-clean": "^2.0.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-node-modules-cachebuster": "^0.1.0",
        "husky": "^2.2.0",
        "jsdoc": "^3.6.1",
        "lodash": "^4.17.11",
        "mini-css-extract-plugin": "^0.4.5",
        "node-sass": "^4.12.0",
        "postcss-clean": "^1.1.0",
        "postcss-loader": "^3.0.0",
        "prettier": "^1.17.0",
        "pretty-quick": "^1.10.0",
        "sass-loader": "^7.1.0",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^4.0.0",
        "typescript": "^3.4.5",
        "vuepress": "^0.14.11",
        "webpack": "^4.31.0",
        "webpack-cli": "^3.3.2",
        "webpackbar": "^3.2.0",
        "wp-hookdoc": "^0.2.0"
    }
}
